<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	<import resource="classpath:applicationContext.xml"/>
	
	<bean name="RoleResource" class="circulo.circulo_resource_controller.resource.RoleResource">
		<property name="controller" ref="Controller"/>
	</bean>
	<bean name="UserResource" class="circulo.circulo_resource_controller.resource.UserResource">
		<property name="controller" ref="Controller"/>
	</bean>
	<bean name="TagResource" class="circulo.circulo_resource_controller.resource.TagResource">
		<property name="controller" ref="Controller"/>
	</bean>
	<bean name="NoteResource" class="circulo.circulo_resource_controller.resource.NoteResource">
		<property name="controller" ref="Controller"/>
	</bean>
</beans>